<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/rl">

    <RelativeLayout
        android:id="@+id/rlFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" android:background="@drawable/popup_menu">

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toLeftOf="@+id/etQty" android:layout_centerVertical="true" android:background="@drawable/btn_minus"/>

        <EditText
            android:id="@+id/etQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:text="0" android:layout_centerVertical="true" android:layout_marginRight="10dp" android:layout_marginLeft="10dp" android:background="@drawable/box_input_white">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/etQty" android:layout_centerVertical="true" android:background="@drawable/btn_plus"/>

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnPlus" android:layout_centerVertical="true" android:background="@drawable/btn_close" android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnMinus" android:layout_centerVertical="true" android:background="@drawable/btn_ok" android:layout_marginRight="10dp"/>

    </RelativeLayout>

</RelativeLayout>
